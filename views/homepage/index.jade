block content
  .container
    .row
      .col-lg-12
        #myCarousel.carousel.slide(data-ride="carousel")
          ol.carousel-indicators
            li.active(data-target="#myCarousel" data-slide-to="0")
            li.active(data-target="#myCarousel" data-slide-to="1")
            li.active(data-target="#myCarousel" data-slide-to="2")

          div.carousel-inner
            div.item.active
              img(src="/images/slider-3.png" alt="slider-3")
            div.item
              img(src="/images/slider-1.png" alt="slider-1")
            div.item
              img(src="/images/slider-2.jpg" alt="slider-2")
          a.left.carousel-control(href="#myCarousel" data-slide="prev")
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href="#myCarousel" data-slide="next")
            span.glyphicon.glyphicon-chevron-right

    hr
    .row
        .col-lg-1
        .col-lg-10
          ul.nav.nav-tabs
            li.active
              a(href="#opcion1" data-toggle="tab") Mision
            li
