block js
  script(src="/javascripts/bootstrap/bootstrap.js")
  script
    var x=$(document);
    x.ready(inicio);
    function inicio(){
      var x;
      x=$('.carousel');
      x.carousel();
    }
    $('#login_session').on('submit', function(e){
        if($('#user').val().trim()===''){
          alert('faltan datos de usuario');
          e.preventDefault();
        }else{
         if($('#pass').val().trim()===''){
            alert('Faltan datos de contraseña');
            e.preventDefault();
          }else{
           return true;
          }
        }
      });