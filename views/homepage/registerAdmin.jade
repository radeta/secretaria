extends ../layout

block content
	.container(style="margin-top:70px;")
		.row
			.col-lg-12
				form.form(method="post" action="/user/admin")
					table
						tr
							.form-group
								td
									label(for="user") Usuario:
								td
									input(type="text" class="form-control" id="user" name="user" placeholder="Ingrese usuario" required)
						tr
							.form-group
								td
									label(for="pass") Contraseña:
								td
									input(type="password" class="form-control" id="pass" name="pass" placeholder="Ingrese contraseña" required)
						tr
								td
									button(type="submit" class="btn btn-default") Registrar